<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:background="@drawable/shape1"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"

            android:layout_alignParentTop="true"


            android:layout_marginStart="108dp"
            android:layout_marginLeft="108dp"

            android:layout_marginTop="60dp"
            android:text="HOŞGELDİNİZ"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:background="@drawable/shape2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="150dp"

        android:layout_marginLeft="55dp">

        <EditText
            android:id="@+id/kullaniciadi"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:ems="0"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="45dp"
            android:inputType="textPersonName"
            android:hint="Kullanıcı Adı"
            android:drawableRight="@drawable/kullanici"/>

        <EditText
            android:id="@+id/sifre"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:ems="0"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="145dp"
            android:inputType="textPassword"
            android:hint="Şifre"
            android:drawableRight="@drawable/pass"/>

        <EditText
            android:id="@+id/eposta"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:ems="0"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="245dp"
            android:inputType="textEmailAddress"
            android:hint="E-mail"
            android:drawableRight="@drawable/email"/>

    </RelativeLayout>

    <Button
        android:id="@+id/girisbtn"
        android:layout_width="105dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="520dp"
        android:text="GİRİŞ"
        android:textColor="@color/white"
        android:background="@drawable/shape3"/>
    <Button
        android:id="@+id/kayitbtn"
        android:layout_width="105dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="575dp"
        android:text="KAYIT OL"
        android:textColor="@color/white"
        android:background="@drawable/shape3"/>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="662dp">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="41dp"
            android:src="@drawable/instagram_167_svgrepo_com" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="41dp"
            android:src="@drawable/twitter_154_svgrepo_com" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:src="@drawable/facebook_svgrepo_com" />

    </LinearLayout>

</RelativeLayout>